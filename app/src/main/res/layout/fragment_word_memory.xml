<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        tools:context=".ui.study.memory.WordMemoryFragment">

        <!-- 返回按钮 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF" />

        <!-- 加载进度条 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 错误消息 -->
        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:visibility="gone"
            android:gravity="center"
            android:background="#40FFFFFF"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 内容区 -->
        <LinearLayout
            android:id="@+id/contentGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 单词卡片 -->

            <!-- 第一行按钮 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:minHeight="260dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <TextView
                        android:id="@+id/tvEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textColor="#1A2980"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChinese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textColor="#26D0CE"
                        android:textSize="28sp"
                        android:visibility="invisible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnToggleChinese"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="@string/show_chinese"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/btn_transparent_border"
                android:drawableStart="@drawable/ic_visibility"
                android:drawablePadding="4dp"
                android:drawableTint="#FFFFFF"
                android:minWidth="240dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

            <!-- 第二行按钮（上一页/下一页）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPrev"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_transparent_border"
                    android:drawableStart="@drawable/ic_arrow_left"
                    android:drawablePadding="4dp"
                    android:drawableTint="#FFFFFF"
                    android:minWidth="140dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/prev"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="151dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/btn_transparent_border"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="4dp"
                    android:drawableTint="#FFFFFF"
                    android:minWidth="140dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/next"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 第三行按钮（添加/收藏）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddToVocabulary"
                    android:layout_width="157dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_transparent_border"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="4dp"
                    android:drawableTint="#FFFFFF"
                    android:minWidth="200dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/add_to_vocabulary"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnBookmark"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/btn_transparent_border"
                    android:drawableStart="@drawable/ic_bookmark"
                    android:drawablePadding="4dp"
                    android:drawableTint="#FFFFFF"
                    android:minWidth="140dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/bookmark"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>